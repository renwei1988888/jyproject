<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        style="@style/headerWeight"
        layout="@layout/top_layout" />

    <LinearLayout
        style="@style/relativeLayoutWeight"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

            <TextView
                android:id="@+id/alipay_tv"
                style="@style/Both_Wrap_style"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:text="@string/ali_account"
                android:textColor="@color/black" />

            <View
                android:id="@+id/view"
                android:layout_width="@dimen/marg_2px"
                android:layout_height="@dimen/marg_30px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_toRightOf="@+id/alipay_tv"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/alipay_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_toRightOf="@id/view"
                android:background="@null"
                android:hint="@string/ali_hint"
                android:textSize="@dimen/size_28pt" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/marg_1px"
            android:background="@color/gray_e8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9">

            <TextView
                android:id="@+id/sure_tv"
                style="@style/Match_Wrap_style"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/marg_50px"
                android:layout_marginRight="@dimen/marg_50px"
                android:layout_marginTop="@dimen/marg_50px"
                android:background="@drawable/mybank_radius_10px_none"
                android:gravity="center"
                android:paddingBottom="@dimen/marg_20px"
                android:paddingTop="@dimen/marg_20px"
                android:text="@string/over"
                android:textColor="@color/white"
                android:textSize="@dimen/size_36pt" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
