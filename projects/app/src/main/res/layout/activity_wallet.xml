<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <include
        style="@style/headerWeight"
        layout="@layout/top_layout" />

    <LinearLayout
        style="@style/relativeLayoutWeight"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:background="@mipmap/merchantloan_top_background"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4">

                <TextView
                    android:id="@+id/sum_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/view"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="@dimen/marg_20px"
                    android:text="69808"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_50pt"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view"
                    android:layout_width="@dimen/marg_40px"
                    android:layout_height="@dimen/marg_4px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/view"
                    android:layout_marginTop="@dimen/marg_20px"
                    android:text="@string/wallet_allmoney"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35">

                <TextView
                    android:id="@+id/wsum_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/wview"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="@dimen/marg_20px"
                    android:text="502"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_50pt"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/wview"
                    android:layout_width="@dimen/marg_40px"
                    android:layout_height="@dimen/marg_4px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/wview"
                    android:layout_marginTop="@dimen/marg_20px"
                    android:text="@string/wallet_wwicon"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="@color/business_bg_color"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/marg_8px"
                android:layout_marginLeft="@dimen/marg_8px"
                android:layout_marginRight="@dimen/marg_8px"
                android:layout_marginTop="@dimen/marg_8px"
                android:background="@drawable/yellow_radius_0px"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/recharge_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wallet_recharge"
                        android:textColor="@color/business_font_color_s"
                        android:textSize="@dimen/size_30pt" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/marg_2px"
                    android:layout_height="@dimen/marg_30px"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@color/business_font_color_s" />

                <LinearLayout
                    android:id="@+id/withdraw_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wallet_withdraw"
                        android:textColor="@color/business_font_color_s"
                        android:textSize="@dimen/size_30pt" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/moneydetail_rl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:text="@string/wallet_moneydetail"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/marg_20px"
                android:src="@mipmap/arrow_right_28x28" />

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/marg_20px"
            android:layout_marginRight="@dimen/marg_20px"
            android:background="@color/gray_e8" />

        <RelativeLayout
            android:id="@+id/mybankcard_rl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:text="@string/wallet_mybankcard"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/marg_20px"
                android:layout_toLeftOf="@+id/bankarrow"
                android:text="@string/wallet_addno"
                android:textColor="@color/gray_s" />

            <ImageView
                android:id="@+id/bankarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/marg_20px"
                android:src="@mipmap/arrow_right_28x28" />

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/marg_20px"
            android:layout_marginRight="@dimen/marg_20px"
            android:background="@color/gray_e8" />

        <RelativeLayout
            android:id="@+id/myalilpay_rl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:text="@string/wallet_myalipay"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/marg_20px"
                android:layout_toLeftOf="@+id/rightarrow"
                android:text="@string/wallet_addyes"
                android:textColor="@color/business_font_color_q" />

            <ImageView
                android:id="@+id/rightarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/marg_20px"
                android:src="@mipmap/arrow_right_28x28" />

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/marg_20px"
            android:layout_marginRight="@dimen/marg_20px"
            android:background="@color/gray_e8" />

        <RelativeLayout
            android:id="@+id/paysetting_rl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:text="@string/wallet_paysetting"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/marg_20px"
                android:src="@mipmap/arrow_right_28x28" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:background="@color/back_qgray_bg">

            <TextView
                android:id="@+id/toproblem_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/marg_20px"
                android:text="@string/wallet_commonproblem"
                android:textColor="@color/business_font_color_q" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
