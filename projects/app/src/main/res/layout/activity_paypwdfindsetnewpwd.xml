<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        style="@style/headerWeight"
        layout="@layout/top_layout" />

    <LinearLayout
        style="@style/relativeLayoutWeight"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.55"
            android:background="@color/gray_e8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/pwddes_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/withdrawpwd_confirm"
                        android:textColor="@color/gray" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marg_40px">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/one_edt"
                            android:layout_width="@dimen/marg_60px"
                            android:layout_height="@dimen/marg_60px"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/marg_20px"
                            android:background="@drawable/gray_radius_10px"
                            android:gravity="center"
                            android:inputType="numberPassword"
                            android:maxLength="1"
                            android:textColor="@color/business_font_color_s" />


                        <EditText
                            android:id="@+id/two_edt"
                            android:layout_width="@dimen/marg_60px"
                            android:layout_height="@dimen/marg_60px"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/marg_20px"
                            android:background="@drawable/gray_radius_10px"
                            android:gravity="center"
                            android:inputType="numberPassword"
                            android:maxLength="1"
                            android:textColor="@color/business_font_color_s" />


                        <EditText
                            android:id="@+id/three_edt"
                            android:layout_width="@dimen/marg_60px"
                            android:layout_height="@dimen/marg_60px"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/marg_20px"
                            android:background="@drawable/gray_radius_10px"
                            android:gravity="center"
                            android:inputType="numberPassword"
                            android:maxLength="1"
                            android:textColor="@color/business_font_color_s" />


                        <EditText
                            android:id="@+id/four_edt"
                            android:layout_width="@dimen/marg_60px"
                            android:layout_height="@dimen/marg_60px"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/marg_20px"
                            android:background="@drawable/gray_radius_10px"
                            android:gravity="center"
                            android:inputType="numberPassword"
                            android:maxLength="1"
                            android:textColor="@color/business_font_color_s" />

                        <EditText
                            android:id="@+id/five_edt"
                            android:layout_width="@dimen/marg_60px"
                            android:layout_height="@dimen/marg_60px"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/marg_20px"
                            android:background="@drawable/gray_radius_10px"
                            android:gravity="center"
                            android:inputType="numberPassword"
                            android:maxLength="1"
                            android:textColor="@color/business_font_color_s" />

                        <EditText
                            android:id="@+id/six_edt"
                            android:layout_width="@dimen/marg_60px"
                            android:layout_height="@dimen/marg_60px"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/marg_20px"
                            android:background="@drawable/gray_radius_10px"
                            android:gravity="center"
                            android:inputType="numberPassword"
                            android:maxLength="1"
                            android:textColor="@color/business_font_color_s" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marg_20px">

                    <TextView
                        android:id="@+id/suggesiondes_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/withdrawpwd_suggestion"
                        android:textColor="@color/gray" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/paypwdset_keyboard"
                android:textColor="@color/gray" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/marg_1px"
            android:background="@color/gray_e8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4">

            <com.merchant.weight.PwdKeyboardView
                android:id="@+id/key_board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_e8"
                android:keepScreenOn="true"
                android:keyBackground="@color/white"
                android:keyTextColor="@android:color/black"
                android:keyTextSize="@dimen/size_50pt"
                android:shadowRadius="0" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
