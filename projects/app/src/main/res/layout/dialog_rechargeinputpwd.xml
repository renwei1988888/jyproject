<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Both_Match_style"
    android:background="@drawable/white_radius_3px"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/marg_20px">

        <TextView
            android:id="@+id/tv_dialog_title"
            style="@style/Both_Wrap_style"
            android:layout_centerInParent="true"
            android:textColor="@color/main_black_color"
            android:textSize="@dimen/size_36pt" />

        <ImageView
            android:id="@+id/cancel_img"
            style="@style/Both_Wrap_style"
            android:layout_alignParentRight="true"
            android:src="@mipmap/todismiss_img" />
    </RelativeLayout>


    <RelativeLayout
        style="@style/Match_Wrap_style"
        android:padding="@dimen/marg_20px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/moneytype_tv"
                style="@style/Both_Wrap_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_toRightOf="@+id/left_img"
                android:text="充值金额"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_28pt" />

            <TextView
                style="@style/Both_Wrap_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_toRightOf="@+id/left_img"
                android:text="¥1000"
                android:textColor="@color/main_black_color"
                android:textSize="@dimen/size_28pt" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/marg_1px"
        android:background="@color/gray_e8" />

    <RelativeLayout
        style="@style/Match_Wrap_style"
        android:padding="@dimen/marg_20px">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/one_edt"
                android:layout_width="@dimen/marg_60px"
                android:layout_height="@dimen/marg_60px"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:background="@drawable/gray_radius_10px"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="@color/business_font_color_s" />


            <EditText
                android:id="@+id/two_edt"
                android:layout_width="@dimen/marg_60px"
                android:layout_height="@dimen/marg_60px"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:background="@drawable/gray_radius_10px"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="@color/business_font_color_s" />


            <EditText
                android:id="@+id/three_edt"
                android:layout_width="@dimen/marg_60px"
                android:layout_height="@dimen/marg_60px"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:background="@drawable/gray_radius_10px"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="@color/business_font_color_s" />


            <EditText
                android:id="@+id/four_edt"
                android:layout_width="@dimen/marg_60px"
                android:layout_height="@dimen/marg_60px"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:background="@drawable/gray_radius_10px"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="@color/business_font_color_s" />

            <EditText
                android:id="@+id/five_edt"
                android:layout_width="@dimen/marg_60px"
                android:layout_height="@dimen/marg_60px"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:background="@drawable/gray_radius_10px"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="@color/business_font_color_s" />

            <EditText
                android:id="@+id/six_edt"
                android:layout_width="@dimen/marg_60px"
                android:layout_height="@dimen/marg_60px"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:background="@drawable/gray_radius_10px"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="@color/business_font_color_s" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/marg_1px"
        android:background="@color/gray_e8" />

    <RelativeLayout
        android:id="@+id/toadd_rl"
        style="@style/Match_Wrap_style"
        android:orientation="horizontal"
        android:padding="@dimen/marg_20px">


        <TextView
            android:id="@+id/toadd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="忘记密码？"
            android:textColor="@color/business_font_color_s" />
    </RelativeLayout>

</LinearLayout>