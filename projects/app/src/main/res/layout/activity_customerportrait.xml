<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        style="@style/headerWeight"
        layout="@layout/top_layout" />

    <LinearLayout
        style="@style/relativeLayoutWeight"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.29"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/marg_10px"
                    android:layout_height="@dimen/marg_30px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/business_bg_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/marg_20px"
                    android:text="@string/portrait_sex"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/marg_2px"
                android:background="@color/gray_e8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4">

                    <com.merchant.weight.CircleProgressView
                        android:id="@+id/sex_circlepview"
                        android:layout_width="@dimen/marg_150px"
                        android:layout_height="@dimen/marg_150px"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/point_sex_femal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:text="●"
                                    android:textColor="@color/red" />

                                <TextView
                                    android:id="@+id/femal_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/marg_20px"
                                    android:layout_toRightOf="@id/point_sex_femal"
                                    android:text="@string/protrait_sex_female"
                                    android:textColor="@color/gray" />

                                <TextView
                                    android:id="@+id/point_sex_male"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_below="@id/point_sex_femal"
                                    android:layout_marginTop="@dimen/marg_20px"
                                    android:text="●"
                                    android:textColor="@color/blue_top" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/femal_tv"
                                    android:layout_marginLeft="@dimen/marg_20px"
                                    android:layout_marginTop="@dimen/marg_20px"
                                    android:layout_toRightOf="@id/point_sex_male"
                                    android:text="@string/protrait_sex_male"
                                    android:textColor="@color/gray" />
                            </RelativeLayout>
                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/female_percent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:text="占比37%"
                                    android:textColor="@color/red" />

                                <TextView
                                    android:id="@+id/male_percent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/female_percent"
                                    android:layout_marginTop="@dimen/marg_20px"
                                    android:text="占比63%"
                                    android:textColor="@color/blue_top" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/marg_20px"
            android:layout_weight="0.29"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/marg_20px"
                android:background="@color/back_qgray_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/marg_10px"
                    android:layout_height="@dimen/marg_30px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/business_bg_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/marg_20px"
                    android:text="@string/portrait_age"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/marg_2px"
                android:background="@color/gray_e8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4">

                    <com.merchant.weight.CircleProgressView
                        android:id="@+id/age_circlepview"
                        android:layout_width="@dimen/marg_150px"
                        android:layout_height="@dimen/marg_150px"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/point_age_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:text="●"
                                    android:textColor="@color/red" />

                                <TextView
                                    android:id="@+id/age_one_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/marg_20px"
                                    android:layout_toRightOf="@id/point_age_one"
                                    android:text="@string/protrait_twetytothirty"
                                    android:textColor="@color/gray" />

                                <TextView
                                    android:id="@+id/point_age_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_below="@id/point_age_one"
                                    android:layout_marginTop="@dimen/marg_20px"
                                    android:text="●"
                                    android:textColor="@color/blue_top" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/age_one_tv"
                                    android:layout_marginLeft="@dimen/marg_20px"
                                    android:layout_marginTop="@dimen/marg_20px"
                                    android:layout_toRightOf="@id/point_age_two"
                                    android:text="@string/protrait_thirtytofouty"
                                    android:textColor="@color/gray" />
                            </RelativeLayout>
                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/age_one_percent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:text="占比37%"
                                    android:textColor="@color/red" />

                                <TextView
                                    android:id="@+id/age_two_percent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/age_one_percent"
                                    android:layout_marginTop="@dimen/marg_20px"
                                    android:text="占比63%"
                                    android:textColor="@color/blue_top" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/marg_20px"
            android:layout_weight="0.29"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/marg_20px"
                android:background="@color/back_qgray_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/marg_10px"
                    android:layout_height="@dimen/marg_30px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/business_bg_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/marg_20px"
                    android:text="@string/portrait_work"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/marg_2px"
                android:background="@color/gray_e8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4">

                    <com.merchant.weight.CircleProgressView
                        android:id="@+id/work_circlepview"
                        android:layout_width="@dimen/marg_150px"
                        android:layout_height="@dimen/marg_150px"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/point_work_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:text="●"
                                    android:textColor="@color/red" />

                                <TextView
                                    android:id="@+id/work_one_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/marg_20px"
                                    android:layout_toRightOf="@id/point_work_one"
                                    android:text="@string/protrait_white"
                                    android:textColor="@color/gray" />

                                <TextView
                                    android:id="@+id/point_work_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_below="@id/point_work_one"
                                    android:layout_marginTop="@dimen/marg_20px"
                                    android:text="●"
                                    android:textColor="@color/blue_top" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/work_one_tv"
                                    android:layout_marginLeft="@dimen/marg_20px"
                                    android:layout_marginTop="@dimen/marg_20px"
                                    android:layout_toRightOf="@id/point_work_two"
                                    android:text="@string/protrait_teacher"
                                    android:textColor="@color/gray" />
                            </RelativeLayout>
                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/work_one_percent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:text="占比37%"
                                    android:textColor="@color/red" />

                                <TextView
                                    android:id="@+id/work_two_percent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/work_one_percent"
                                    android:layout_marginTop="@dimen/marg_20px"
                                    android:text="占比63%"
                                    android:textColor="@color/blue_top" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.13"
            android:background="@color/back_qgray_bg"></LinearLayout>

    </LinearLayout>


</LinearLayout>
