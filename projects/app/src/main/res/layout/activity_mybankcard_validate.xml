<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        style="@style/headerWeight"
        layout="@layout/top_layout" />

    <LinearLayout
        style="@style/relativeLayoutWeight"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:paddingBottom="@dimen/marg_20px"
            android:paddingLeft="@dimen/marg_20px"
            android:paddingRight="@dimen/marg_20px"
            android:paddingTop="@dimen/marg_20px">

            <TextView
                android:id="@+id/carttype_tv"
                style="@style/Both_Wrap_style"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/mybankcard_cardtext"
                android:textColor="@color/black"
                android:textSize="@dimen/size_24pt" />

            <View
                android:id="@+id/cview"
                android:layout_width="@dimen/marg_2px"
                android:layout_height="@dimen/marg_20px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_toRightOf="@+id/carttype_tv"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/cardtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_toRightOf="@id/cview"
                android:text="@string/mybankcard_cardtype"
                android:textColor="@color/black" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/marg_2px"
            android:background="@color/gray_e8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:paddingBottom="@dimen/marg_20px"
            android:paddingLeft="@dimen/marg_20px"
            android:paddingRight="@dimen/marg_20px"
            android:paddingTop="@dimen/marg_20px">

            <TextView
                android:id="@+id/cardid_tv"
                style="@style/Both_Wrap_style"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/mybankcard_cardidtext"
                android:textColor="@color/black"
                android:textSize="@dimen/size_24pt" />

            <View
                android:id="@+id/cidview"
                android:layout_width="@dimen/marg_2px"
                android:layout_height="@dimen/marg_20px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_toRightOf="@+id/cardid_tv"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/cardid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_toRightOf="@id/cidview"
                android:hint="@string/add_card_hint" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/marg_1px"
            android:background="@color/gray_e8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:paddingBottom="@dimen/marg_20px"
            android:paddingLeft="@dimen/marg_20px"
            android:paddingRight="@dimen/marg_20px"
            android:paddingTop="@dimen/marg_20px">

            <TextView
                android:id="@+id/suggestion_tv"
                style="@style/Both_Wrap_style"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/mybankcard_suggestion"
                android:textColor="@color/red"
                android:textSize="@dimen/size_24pt" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/marg_20px"
            android:background="@color/gray_e8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:paddingBottom="@dimen/marg_20px"
            android:paddingLeft="@dimen/marg_20px"
            android:paddingRight="@dimen/marg_20px"
            android:paddingTop="@dimen/marg_20px">

            <TextView
                android:id="@+id/holder_tv"
                style="@style/Both_Wrap_style"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/mybankcard_holdertext"
                android:textColor="@color/black"
                android:textSize="@dimen/size_24pt" />

            <View
                android:id="@+id/hview"
                android:layout_width="@dimen/marg_2px"
                android:layout_height="@dimen/marg_20px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_toRightOf="@+id/holder_tv"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/holder_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_toRightOf="@id/hview"
                android:hint="@string/mybankcard_holder" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/marg_2px"
            android:background="@color/gray_e8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:paddingBottom="@dimen/marg_20px"
            android:paddingLeft="@dimen/marg_20px"
            android:paddingRight="@dimen/marg_20px"
            android:paddingTop="@dimen/marg_20px">

            <TextView
                android:id="@+id/id_tv"
                style="@style/Both_Wrap_style"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/mybankcard_idtext"
                android:textColor="@color/black"
                android:textSize="@dimen/size_24pt" />

            <View
                android:id="@+id/idview"
                android:layout_width="@dimen/marg_2px"
                android:layout_height="@dimen/marg_20px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_toRightOf="@+id/id_tv"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/idnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_toRightOf="@id/idview"
                android:hint="@string/mybankcard_id" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/marg_2px"
            android:background="@color/gray_e8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:paddingBottom="@dimen/marg_10px"
            android:paddingLeft="@dimen/marg_20px"
            android:paddingRight="@dimen/marg_20px"
            android:paddingTop="@dimen/marg_10px">

            <TextView
                android:id="@+id/phone_tv"
                style="@style/Both_Wrap_style"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/mybankcard_phonetext"
                android:textColor="@color/black"
                android:textSize="@dimen/size_24pt" />

            <View
                android:id="@+id/pview"
                android:layout_width="@dimen/marg_2px"
                android:layout_height="@dimen/marg_20px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_toRightOf="@+id/phone_tv"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/phone_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_toRightOf="@id/pview"
                android:background="@null"
                android:hint="@string/mybankcard_phonehint"
                android:textSize="@dimen/size_30pt" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/marg_20px"
                android:src="@mipmap/mybankcard_phone_why" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/marg_20px"
            android:background="@color/gray_e8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:paddingBottom="@dimen/marg_20px"
            android:paddingLeft="@dimen/marg_20px"
            android:paddingRight="@dimen/marg_20px"
            android:paddingTop="@dimen/marg_20px">

            <TextView
                android:id="@+id/phonesure_tv"
                style="@style/Both_Wrap_style"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/mybankcard_registerphone"
                android:textColor="@color/black"
                android:textSize="@dimen/size_24pt" />

            <View
                android:id="@+id/psview"
                android:layout_width="@dimen/marg_2px"
                android:layout_height="@dimen/marg_20px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_toRightOf="@+id/phonesure_tv"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/phonesurenumber_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_toRightOf="@id/psview"
                android:hint="@string/mybankcard_phoneno" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/marg_1px"
            android:background="@color/gray_e8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:paddingBottom="@dimen/marg_20px"
            android:paddingLeft="@dimen/marg_20px"
            android:paddingRight="@dimen/marg_20px"
            android:paddingTop="@dimen/marg_20px">

            <ImageView
                android:id="@+id/isagree_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/mybank_agree_yes" />

            <TextView
                android:id="@+id/agree_tv"
                style="@style/Both_Wrap_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_toRightOf="@+id/isagree_img"
                android:text="@string/mybankcard_agrren"
                android:textColor="@color/black"
                android:textSize="@dimen/size_24pt" />

            <TextView
                android:id="@+id/protocal_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/agree_tv"
                android:text="@string/mybankcard_protocal"
                android:textColor="@color/business_font_color_s" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3">

            <TextView
                android:id="@+id/validate_tv"
                style="@style/Match_Wrap_style"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/marg_60px"
                android:layout_marginRight="@dimen/marg_60px"
                android:layout_marginTop="@dimen/marg_30px"
                android:background="@drawable/mybank_radius_10px_none"
                android:gravity="center"
                android:paddingBottom="@dimen/marg_20px"
                android:paddingTop="@dimen/marg_20px"
                android:text="@string/mybankcard_validattext"
                android:textColor="@color/white"
                android:textSize="@dimen/size_30pt" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
