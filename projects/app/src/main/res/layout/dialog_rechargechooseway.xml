<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Both_Match_style"
    android:background="@drawable/white_radius_3px"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/marg_20px">

        <TextView
            android:id="@+id/tv_dialog_title"
            style="@style/Both_Wrap_style"
            android:layout_centerInParent="true"
            android:textColor="@color/main_black_color"
            android:textSize="@dimen/size_36pt" />

        <ImageView
            android:id="@+id/cancel_img"
            style="@style/Both_Wrap_style"
            android:layout_alignParentRight="true"
            android:src="@mipmap/todismiss_img" />
    </RelativeLayout>


    <RelativeLayout
        style="@style/Match_Wrap_style"
        android:padding="@dimen/marg_20px">

        <ImageView
            android:id="@+id/left_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/wallet_js" />

        <TextView
            style="@style/Both_Wrap_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marg_20px"
            android:layout_toRightOf="@+id/left_img"
            android:text="@string/recharge_bank_js"
            android:textColor="@color/main_black_color"
            android:textSize="@dimen/size_28pt" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marg_20px"
            android:src="@mipmap/mybank_agree_yes" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/marg_1px"
        android:background="@color/gray_e8" />

    <RelativeLayout
        style="@style/Match_Wrap_style"
        android:padding="@dimen/marg_20px">

        <ImageView
            android:id="@+id/left_gs_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/wallet_gs" />

        <TextView
            style="@style/Both_Wrap_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marg_20px"
            android:layout_toRightOf="@+id/left_gs_img"
            android:text="@string/recharge_bank_gs"
            android:textColor="@color/main_black_color"
            android:textSize="@dimen/size_28pt" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marg_20px"
            android:src="@mipmap/mybank_agree_no" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/marg_1px"
        android:background="@color/gray_e8" />

    <LinearLayout
        android:id="@+id/toadd_ll"
        style="@style/Match_Wrap_style"
        android:orientation="horizontal"
        android:padding="@dimen/marg_20px">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/toadd_img" />

        <TextView
            android:id="@+id/toadd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marg_20px"
            android:gravity="center"
            android:text="添加银行卡"
            android:textColor="@color/gray" />
    </LinearLayout>

</LinearLayout>