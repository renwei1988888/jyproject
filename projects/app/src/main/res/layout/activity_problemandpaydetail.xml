<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        style="@style/headerWeight"
        layout="@layout/top_layout" />

    <ScrollView
        style="@style/relativeLayoutWeight"
        android:scrollbars="none">

        <LinearLayout
            style="@style/Both_Match_style"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/marg_30px"
                android:paddingTop="@dimen/marg_30px">

                <View
                    android:id="@+id/detail_type_view"
                    android:layout_width="@dimen/marg_10px"
                    android:layout_height="@dimen/marg_20px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@color/business_font_color_s" />

                <TextView
                    android:id="@+id/detail_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/marg_20px"
                    android:layout_toRightOf="@+id/detail_type_view"
                    android:text="@string/what_balance"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/marg_1px"
                android:background="@color/gray_e8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detail_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:paddingLeft="@dimen/marg_20px"
                    android:paddingRight="@dimen/marg_20px"
                    android:paddingTop="@dimen/marg_20px"
                    android:scrollbars="vertical"
                    android:text="@string/what_balance_detail"
                    android:textColor="@color/gray" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
